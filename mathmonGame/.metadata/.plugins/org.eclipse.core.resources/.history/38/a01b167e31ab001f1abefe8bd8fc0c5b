package main;

import java.awt.EventQueue;
import javax.swing.*;
import javax.swing.border.EmptyBorder;

import tile.Tile;

import java.awt.Font;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Image;
import java.io.IOException;
import javax.imageio.ImageIO;

public class MainMenuFrame extends JFrame {

    private static final long serialVersionUID = 1L;
    private CustomPanel contentPane; // Custom JPanel for background drawing
    public Tile tile;

    public static void main(String[] args) {
        EventQueue.invokeLater(() -> {
            try {
                MainMenuFrame frame = new MainMenuFrame();
                frame.setVisible(true);
            } catch (Exception e) {
                e.printStackTrace();
            }
        });
    }

    public MainMenuFrame() {
        setSize(1080, 630);
        setResizable(false);
        setTitle("Main Menu");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        // Load the image
        tile = new Tile();
        try {
            tile.image = ImageIO.read(getClass().getResourceAsStream("/picBackgrounds/picMenuBackground.jpg"));
        } catch (IOException e) {
            e.printStackTrace();
        }

        // Custom panel to draw background
        contentPane = new CustomPanel(tile.image);
        contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
        setContentPane(contentPane);

        JButton btnStart = new JButton("START");
        btnStart.setFont(new Font("Tahoma", Font.PLAIN, 15));

        JButton btnInstructions = new JButton("INSTRUCTIONS");
        try {
            ImageIcon instructionsIcon = new ImageIcon(getClass().getResource("/picBackgrounds/picBtnInstructions.png"));
            btnInstructions.setIcon(instructionsIcon);
            btnInstructions.setHorizontalTextPosition(SwingConstants.CENTER); // Center the text over the icon
            btnInstructions.setVerticalTextPosition(SwingConstants.CENTER);
            btnInstructions.setContentAreaFilled(false); // Make the background transparent
            btnInstructions.setBorderPainted(false);    // Remove the border
            btnInstructions.setFocusPainted(false);     // Remove focus rectangle
        } catch (Exception e) {
            e.printStackTrace();
        }

        btnInstructions.setFont(new Font("Tahoma", Font.PLAIN, 15));

        JButton btnLeaderboards = new JButton("LEADERBOARDS");
        btnLeaderboards.setFont(new Font("Tahoma", Font.PLAIN, 15));

        JButton btnAbout = new JButton("ABOUT");
        btnAbout.setFont(new Font("Tahoma", Font.PLAIN, 15));

        btnStart.addActionListener(e -> {
            dispose(); // Close the Main Menu
            mathmonMain gameFrame = new mathmonMain();
            gameFrame.setVisible(true); // Show the Game Frame
        });

        btnLeaderboards.addActionListener(e -> {
            dispose(); // Close the Main Menu
            mathmonLeaderboards leaderboardsFrame = new mathmonLeaderboards();
            leaderboardsFrame.setVisible(true); // Show the Leaderboards Frame
        });

        btnAbout.addActionListener(e -> {
            dispose(); // Close the Main Menu
            mathmonAbout aboutFrame = new mathmonAbout();
            aboutFrame.setVisible(true); // Show the About Frame
        });

        GroupLayout gl_contentPane = new GroupLayout(contentPane);
        gl_contentPane.setHorizontalGroup(
            gl_contentPane.createParallelGroup(GroupLayout.Alignment.LEADING)
                .addGroup(gl_contentPane.createSequentialGroup()
                    .addGap(440)
                    .addComponent(btnStart, GroupLayout.PREFERRED_SIZE, 94, GroupLayout.PREFERRED_SIZE)
                    .addContainerGap(528, Short.MAX_VALUE))
                .addGroup(gl_contentPane.createSequentialGroup()
                    .addGap(395)
                    .addComponent(btnInstructions, GroupLayout.PREFERRED_SIZE, 181, GroupLayout.PREFERRED_SIZE)
                    .addContainerGap(486, Short.MAX_VALUE))
                .addGroup(gl_contentPane.createSequentialGroup()
                    .addGap(420)
                    .addComponent(btnLeaderboards, GroupLayout.DEFAULT_SIZE, GroupLayout.DEFAULT_SIZE, Short.MAX_VALUE)
                    .addGap(497))
                .addGroup(gl_contentPane.createSequentialGroup()
                    .addGap(432)
                    .addComponent(btnAbout, GroupLayout.PREFERRED_SIZE, 112, GroupLayout.PREFERRED_SIZE)
                    .addContainerGap(518, Short.MAX_VALUE))
        );
        gl_contentPane.setVerticalGroup(
            gl_contentPane.createParallelGroup(GroupLayout.Alignment.LEADING)
                .addGroup(GroupLayout.Alignment.TRAILING, gl_contentPane.createSequentialGroup()
                    .addContainerGap(223, Short.MAX_VALUE)
                    .addComponent(btnStart, GroupLayout.PREFERRED_SIZE, 35, GroupLayout.PREFERRED_SIZE)
                    .addGap(18)
                    .addComponent(btnInstructions, GroupLayout.PREFERRED_SIZE, 35, GroupLayout.PREFERRED_SIZE)
                    .addGap(18)
                    .addComponent(btnLeaderboards, GroupLayout.PREFERRED_SIZE, 38, GroupLayout.PREFERRED_SIZE)
                    .addGap(18)
                    .addComponent(btnAbout, GroupLayout.PREFERRED_SIZE, 39, GroupLayout.PREFERRED_SIZE)
                    .addGap(266))
        );
        contentPane.setLayout(gl_contentPane);
    }

    // Custom JPanel for drawing the background
    private static class CustomPanel extends JPanel {
        private static final long serialVersionUID = 1L;
        private final Image backgroundImage;

        public CustomPanel(Image image) {
            this.backgroundImage = image;
        }

        @Override
        protected void paintComponent(Graphics g) {
            super.paintComponent(g);
            if (backgroundImage != null) {
                Graphics2D g2d = (Graphics2D) g;
                g2d.drawImage(backgroundImage, 0, 0, getWidth(), getHeight(), null);
            }
        }
    }
}
